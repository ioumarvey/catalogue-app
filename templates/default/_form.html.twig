
{% extends 'base.html.twig' %}

{% block title %}
    {{ page_title }}
{% endblock %}

{% block body %}
    <h1 class="user-details" style="color: var(--white);">{{ page_title }}</h1>
    <div class="editing">

    {{ form_start(form) }}
    {% if false == form.vars.valid %}
        {% include 'default/_single_alert_message.html.twig' with {
            type: 'danger',
            message: 'error'|trans,
        }%}
    {% endif %}

    {{ form_widget(form) }}
    </div>

    <input class="add-btn" type="submit" value="{{ submit_label }}" />


    {% if back_to_list_path|default(false) %}
        <div>
            <a href="{{ url(back_to_list_path) }}" class="back-btn">
                {{ 'Back to categories'|trans }}
            </a>
        </div>

    {% endif %}
    {{ form_end(form) }}
{% endblock %}